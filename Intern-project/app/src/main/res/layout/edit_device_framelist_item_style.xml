<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:height="100sp"
    android:orientation="horizontal"
    android:background="@layout/my_info_button_style">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingTop="8sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingBottom="15sp"
        android:id="@+id/frameImageLayout"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/editDeviceFrameImage"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/editDeviceFrameText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="8sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingBottom="15sp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editDeviceFrameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editDeviceFrameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A3A3A3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right">

        <Button
            android:layout_width="50sp"
            android:layout_height="fill_parent"
            android:id="@+id/deleteRelationalFrameBtn"
            android:visibility="gone"
            android:background="#FF0000"
            android:text="删除"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>

