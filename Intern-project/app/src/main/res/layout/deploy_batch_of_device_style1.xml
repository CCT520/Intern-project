<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8sp"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:paddingBottom="15sp"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/deployBatchOfDeviceFrameImageLayout"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deployBatchOfDeviceFrameImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/editDeviceFrameText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15sp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deployBatchOfDeviceFrameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/deployBatchOfDeviceFrameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15sp"
            android:textColor="#A3A3A3" />


    </LinearLayout>

</LinearLayout>

